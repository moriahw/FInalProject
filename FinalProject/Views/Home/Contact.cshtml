@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="table">
    <table style="font-family:Comic Sans MS" class="table table-bordered">

        <tr>
            <th>
                Souvenir Type
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>


        </tr>

        @foreach (var Element in ViewBag.Emplist)
        {
            <tr>
                <td>
                    @Element.Souvenirname
                </td>

                <td>
                    @Element.Description
                </td>
                <td>
                    @Element.Price
                </td>
                <td>
                    <a href="/Home/AddtoCart?Souvenir=@Element.Souvenirname" onclick="return confirm('Your item was successfully added to the cart!')">Add to Cart</a>
                </td>
            </tr>

        }
    </table>

    @ViewBag.Message 
    <a href="/Home/Cart">Go to Cart </a>
</div>
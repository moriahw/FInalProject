
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FinalProject.Models.Souvenir
<h2>Cart</h2>



<div class="table">
    <table style="font-family:'Quicksand', sans-serif" class="table table-bordered">

        <tr>
            <th>
                Souvenir Type
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>


        </tr>


        @foreach (var Element in ViewBag.Cart)
        {
            <tr>
                <td>
                    @Element.Souvenirname
                </td>

                <td>
                    @Element.Description
                </td>
                <td>
                    @Element.Price
                </td>
                <td>
                    <a href="/Home/DeleteItem?name=@Element.Souvenirname" onclick="return confirm ('Are you sure?')" class="btn btn-primary btn-danger"><span class="glyphicon glyphicon-remove"></span> Delete</a>
                </td>
            </tr>

        }
    </table>
</div>

<a href="/Home/Checkout" class="btn btn-primary btn-success"><span class="glyphicon glyphicon-share-alt"></span> Checkout</a>